<div class="container body-content">
    <div class="well">
        <h2>All Posts</h2>
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Subject</th>
                    <th>School</th>
                    <th>Class</th>
                    <th>Author</th>
                </tr>
                </thead>
                <tbody>
                {{#each searchedPosts}}
                    <td>{{ this.id }}</td>
                    <td>{{ this.title }}</td>
                    <td>{{ this.content }}</td>
                    <td>{{ this.subject.name }}</td>
                    <td>{{ this.school.name }}</td>
                    <td>{{ this.classLevel }}</td>
                    <td>{{ this.author.fullName }}</td>
                    <td>
                        <a href="view/{{this.id}}">View Post</a>
                    </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>