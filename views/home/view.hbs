<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal"
              action="/home/view/{{post.id}}" enctype="multipart/form-data" method="post">
            <fieldset>
                <legend>View Post</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="title"></label>
                    <div class="col-sm-4 ">
                        <h3 class="text-info">{{post.title}}</h3>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="content"></label>
                    <div class="col-sm-4 ">
                        <p>{{post.content}}</p>
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-sm-12">
                        <img src="../../../{{post.imgUrl}}" style="width: 100%; height: 100%">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="javascript:history.back()" class="btn btn-default">Go Back</a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>