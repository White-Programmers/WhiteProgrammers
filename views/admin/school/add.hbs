<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/admin/school/add">
            <fieldset>
                <legend>Add School</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="title">School</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="title" placeholder="School" name="name"
                               required value={{name}}>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-info">Add</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>